{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cd ${workspaceFolder}/ChromeLauncher && xcodebuild -scheme ChromeLauncher -configuration Debug build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "pkill -x ChromeLauncher 2>/dev/null || true; APP=$(find ~/Library/Developer/Xcode/DerivedData -name 'ChromeLauncher.app' -path '*/Debug/*' | head -1) && open \"$APP\"",
      "group": "none",
      "dependsOn": "Build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cd ${workspaceFolder}/ChromeLauncher && xcodebuild -scheme ChromeLauncher -configuration Debug clean",
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "cd ${workspaceFolder}/ChromeLauncher && xcodebuild -scheme ChromeLauncher -configuration Debug clean build",
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    }
  ]
}
